{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "outDir": "build",
    "declarationDir": "build",
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom", "es2016", "es2017", "es2021"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist", "src/**/*.test.tsx?"]
}
